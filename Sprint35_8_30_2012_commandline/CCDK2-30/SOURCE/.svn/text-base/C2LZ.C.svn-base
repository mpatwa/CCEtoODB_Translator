#include <c2ldefs.h>
#include <c2lmcrs.h>
#include <c2vmcrs.h>

/*-------------------------------------------------------------------------*/
BBS_PRIVATE void c2l_divide ( line, n, t0, t1, pt, parm ) 
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
C2_LINE line ;
INT n ;
REAL t0, t1 ;
PT2* pt ;
PARM parm ;
{
    INT i ;
    REAL h, t ;

    h = ( t1 - t0 ) / ( (REAL)(n-1) ) ;

    for ( i = 0, t = t0 ; i < n ; i++, t+=h ) {
        if ( pt != NULL ) {
            C2V_ADDU ( C2_LINE_PT0(line), C2_LINE_PT1(line), t, pt[i] ) ;
        }
        if ( parm != NULL ) {
            PARM_SETJ ( t, 1, parm+i ) ;
        }
    }
}
