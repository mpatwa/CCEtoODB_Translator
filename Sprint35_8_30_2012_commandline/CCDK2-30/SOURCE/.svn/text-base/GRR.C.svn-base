/*-------------------------------------------------------------------------*/
BBS_PUBLIC BOOLEAN grr_init ( gmode, screen_color )
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
int gmode ;
GR_COLOR screen_color ;
{
 #ifndef __WINDOWS__
    if ( gmode == (int)GR_NOVMODE ) {
        grl_set_solid_patt () ;
        grl_set_color ( screen_color ) ;
        RETURN ( TRUE ) ;
    }

    if ( !grl_set_videomode ( gmode ) )
        RETURN ( FALSE ) ;
    grl_clear_screen() ;
    grl_set_solid_patt () ;
    grl_set_color ( screen_color ) ;
    grl_fill_rectangle ( 0, 0, grl_get_max_x(), grl_get_max_y() ) ;
#else
	grl_init();
#endif // __WINDOWS__ 
    RETURN ( TRUE ) ;
}


