/*-------------------------------------------------------------------------*/
BBS_PUBLIC void grr_point ( c, s )
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
REAL c[2], s ;
{
    REAL a[2], b[2] ;
    s *= 0.5 ;
    a[0] = c[0] - s ;
    b[0] = c[0] + s ;
    a[1] = b[1] = c[1] ;
    grr_line ( a, b ) ;
    s *= grl_get_screen_ratio () ;
    a[0] = b[0] = c[0] ;
    a[1] = c[1] - s ;
    b[1] = c[1] + s ;
    grr_line ( a, b ) ;
}


/*-------------------------------------------------------------------------*/
BBS_PUBLIC void grr_arrow ( c, dir, a, b, h )
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/* arrow starts at c in the direction dir, norm(dir) = 1, and distance a.  */
REAL c[2], dir[2], a, b, h ;
{
    REAL p[2], q[2], u[2], v[2] ;

    p[0] = c[0] + dir[0] * a ;
    p[1] = c[1] + dir[1] * a ;
    grr_line ( c, p ) ;

    q[0] = c[0] + dir[0] * ( a - h ) ;
    q[1] = c[1] + dir[1] * ( a - h ) ;
    u[0] = b * dir[1] ;
    u[1] = - b * dir[0] ;

    v[0] = q[0] + u[0] ;
    v[1] = q[1] + u[1] ;
    grr_line ( v, p ) ;

    v[0] = q[0] - u[0] ;
    v[1] = q[1] - u[1] ;
    grr_line ( v, p ) ;
}


