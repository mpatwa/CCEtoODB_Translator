/*-------------------------------------------------------------------------*/
BBS_PUBLIC void grr_set_textposition ( c )
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
REAL c[2] ;
{
    GR_PIX_COORD x, y ;
    x = grl_get_numtextcols () ;
    y = grl_get_numtextrows () ;
    x = (INT) ( (REAL) ( x - 1 ) * c[0] + 0.5 ) + 1 ;
    y = (INT) ( (REAL) ( y - 1 ) * c[1] + 0.5 ) + 1 ;
    grl_set_textposition ( x, y ) ;
}


