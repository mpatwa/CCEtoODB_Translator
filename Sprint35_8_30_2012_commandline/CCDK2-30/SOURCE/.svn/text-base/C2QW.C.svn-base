#include <alwdefs.h>
#include <c2qdefs.h>
#include <c2qmcrs.h>

/*-------------------------------------------------------------------------*/
BBS_PRIVATE BOOLEAN c2q_get ( file, buffer, n ) 
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
FILE *file ;
C2_PC_BUFFER buffer ;
INT n ;
{
    RETURN ( alw_get_array ( file, C2_PC_BUFFER_A(buffer), 3*n-1 ) ) ;
}


/*-------------------------------------------------------------------------*/
BBS_PRIVATE BOOLEAN c2q_put ( file, buffer, status )
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
FILE *file ;
C2_PC_BUFFER buffer ;
BOOLEAN status ;
{
    REAL *a ;
    INT n ;

    a = C2_PC_BUFFER_A(buffer) ;
    n = 3 * C2_PC_BUFFER_N(buffer) - 1 ;
    if ( status ) {
        a += 3 ;
        n -= 3 ;
    }
    RETURN ( alw_put_array ( file, a, n, NULL ) ) ;
}

