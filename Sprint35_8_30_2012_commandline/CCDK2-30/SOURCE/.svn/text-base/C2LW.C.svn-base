#include <alwdefs.h>
#include <c2ldefs.h>

/*-------------------------------------------------------------------------*/
BBS_PRIVATE C2_LINE c2l_get ( file, parm0, parm1 ) 
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
FILE *file ;
PARM parm0, parm1 ;
{
    C2_LINE line = c2l_alloc () ;
    if ( !alw_get_array ( file, (REAL*)line, 4 ) || 
        !alw_get_parm ( file, parm0 ) ||
        !alw_get_parm ( file, parm1 ) ) {
        c2l_free ( line ) ;
        RETURN ( NULL ) ;
    }
    RETURN ( line ) ;
}


/*-------------------------------------------------------------------------*/
BBS_PRIVATE BOOLEAN c2l_put ( file, line, parm0, parm1 ) 
/*-------------------------------------------------------------------------*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
/*!!!!!!!!                                                          !!!!!!!*/
/*!!!!!!!!      (C) Copyright 1989 - 1995 Building Block Software   !!!!!!!*/
/*!!!!!!!!                    All rights reserved                   !!!!!!!*/
/*!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*/
FILE *file ;
C2_LINE line ;
PARM parm0, parm1 ;
{
    RETURN ( alw_put_array ( file, (REAL*)line, 4, NULL ) &&
        alw_put_parm ( file, parm0, NULL ) &&
        alw_put_parm ( file, parm1, NULL ) ) ;
}

